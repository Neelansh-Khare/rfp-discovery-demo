        "type": "string",
        "enum": [
          "british_columbia",
          "alberta",
          "saskatchewan",
          "manitoba",
          "ontario",
          "quebec",
          "new_brunswick",
          "nova_scotia",
          "prince_edward_island",
          "newfoundland_labrador",
          "northwest_territories",
          "nunavut",
          "yukon",
